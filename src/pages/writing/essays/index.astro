---
import MainLayout from "../../../layout/MainLayout.astro";
import { getCollection } from "astro:content";
const pageTitle = "M Durrani | Blog";

// Get all blog posts and sort by date
const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);
---

<MainLayout pageTitle={pageTitle}>
  <div class="container writing-page">
    <header class="page-header">
      <h1>Blog</h1>
      <p class="subtitle">Thoughts on software development, writing, and the intersection of technology and creativity.</p>
    </header>

    <div class="blog-list">
      {sortedPosts.map(post => (
        <a href={`/writing/blog/${post.slug}`}><article class="blog-entry">
          <time datetime={post.data.publishDate.toISOString()}>
            {post.data.publishDate.toLocaleDateString(undefined, {
              year: 'numeric',
              month: 'long'
            })}
          </time>
          <div class="entry-content">
            <h2>
              {post.data.title}
            </h2>
            <p class="description">{post.data.description}</p>
          </div>
        </article></a>
      ))}
    </div>
  </div>
</MainLayout>

<style>
  .blog-list {
    max-width: 65ch;
    margin: 3rem auto;
  }

  .blog-entry {
    padding: 1.5rem 0;
    border-bottom: 1px solid hsla(0, 0%, 100%, 0.1);
  }

  .blog-entry:first-child {
    border-top: 1px solid hsla(0, 0%, 100%, 0.1);
  }

  .blog-entry:hover{
    background: hsla(0, 0%, 100%, 0.05);
    transition: background 0.2s ease;
  }
  

  time {
    font-size: 0.9rem;
    color: var(--text-muted);
    display: block;
    margin-bottom: 0.5rem;
  }

  h2 {
    font-size: 1.5rem;
    line-height: 1.3;
    margin-bottom: 0.5rem;
  }

  h2 a {
    color: var(--text-highlight);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  h2 a:hover {
    color: white;
    text-shadow: 0 0 8px hsla(0, 0%, 100%, 0.3);
  }

  .description {
    color: var(--text-muted);
    font-size: 1rem;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .blog-list {
      margin: 2rem auto;
    }

    .blog-entry {
      padding: 1.25rem 0;
    }

    h2 {
      font-size: 1.3rem;
    }
  }
</style>